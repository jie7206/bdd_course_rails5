<h3>Adding New Article</h3>

<div class="warn">
    <% if @article.errors.any? %>
        <h2 class="panel-title">
            <%= pluralize(@article.errors.count, "error") %>
            prohibited this article from being saved: </h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
</div>

<%= form_for(@article) do |f| %>
    <%= f.label :title %><p>
    <%= f.text_field :title, size: 97, autofocus: true %><p>
    <%= f.label :body %><p>
    <%= f.text_area :body, rows: 25, cols: 100, class: 'form-control' %><p>
    <%= f.submit %>
<% end %> 
